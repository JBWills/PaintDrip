<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="vertical">
    <com.sothree.slidinguppanel.SlidingUpPanelLayout
        xmlns:sothree="http://schemas.android.com/apk/res-auto"
        android:id="@+id/sliding_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="bottom"
        sothree:panelHeight="50dp"
        sothree:shadowHeight="4dp">
        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/map"
            tools:context="edu.cmsc434.paintdrip.paintdripprototype.MapsActivity"
            android:name="com.google.android.gms.maps.SupportMapFragment" />
        <GridLayout
            android:background="#EEEEEE"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="horizontal"
            android:rowCount="2"
            android:columnCount="2">
            <ImageView
                android:id="@+id/drawer_arrow"
                android:src="@drawable/drawer_arrow"
                android:layout_marginTop="13dp"
                android:layout_height="20dp"
                android:layout_gravity="top|center"
                android:layout_row="0"
                android:layout_columnSpan="2"
                />
            <ToggleButton android:id="@+id/button"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_gravity="bottom|left"
                android:layout_row="1"
                android:layout_column="0"
                android:textOn = "Painting On"
                android:textOff = "Painting Off"
                android:onClick="onPaintToggleClicked"
                />
            <Button android:id="@+id/button3"
                android:background="@drawable/inkwell"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_gravity="bottom|right"
                android:onClick="onShowColorPickerClicked"
                />
        </GridLayout>
    </com.sothree.slidinguppanel.SlidingUpPanelLayout>
</LinearLayout>