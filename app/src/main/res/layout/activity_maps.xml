<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="vertical">
    <com.sothree.slidinguppanel.SlidingUpPanelLayout
        xmlns:sothree="http://schemas.android.com/apk/res-auto"
        android:id="@+id/sliding_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="bottom"
        sothree:panelHeight="40dp"
        sothree:shadowHeight="4dp">
        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/map"
            tools:context="edu.cmsc434.paintdrip.paintdripprototype.MapsActivity"
            android:name="com.google.android.gms.maps.SupportMapFragment" />
        <GridLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:rowCount="2"
            android:columnCount="2"            >
            <ToggleButton
                android:layout_width="match_parent"
                android:layout_gravity="top"
                android:layout_row="0"
                android:layout_columnSpan="2"
                />
            <ToggleButton android:id="@+id/button"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_gravity="bottom|left"
                android:layout_row="1"
                android:layout_column="0"
                android:textOn = "Painting On"
                android:textOff = "Painting Off"
                android:onClick="onPaintToggleClicked"
                />
            <ToggleButton android:id="@+id/button3"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_gravity="bottom|right"
                android:text = "Color Picker"
                android:onClick="onShowColorPickerClicked"
                />
        </GridLayout>
    </com.sothree.slidinguppanel.SlidingUpPanelLayout>
</LinearLayout>